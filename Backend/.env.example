# ===========================================
# RISE-FDS Production Environment Variables
# ===========================================
# Copy this file to .env and fill in all values
# NEVER commit .env to version control!

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production

# ===========================================
# CRITICAL SECURITY - MUST SET IN PRODUCTION
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-generate-new-one
JWT_SECRET_KEY=your-jwt-secret-key-generate-new-one

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=rise_fds
DB_USER=your_database_username
DB_PASSWORD=your_database_password

# ===========================================
# Redis Configuration (for rate limiting)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Frontend URL (for CORS)
# ===========================================
# Comma-separated for multiple origins
FRONTEND_URL=https://your-frontend-domain.com

# ===========================================
# Email Configuration (for OTP)
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ===========================================
# SMS Configuration (for OTP)
# ===========================================
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://your-sms-provider-api-url
SMS_SENDER_ID=RISEFDS

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_FOLDER=/var/www/rise-fds/uploads

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO